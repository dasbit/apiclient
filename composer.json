{
    "name": "dasbit/apiclient",
    "type": "library",
    "description": "Simple api client wrapper without throwing exceptions with statuscodes",
    "keywords": [
        "dasbit",
        "apiclient"
    ],
    "homepage": "https://github.com/dasbit/apiclient",
    "license": "MIT",
    "authors": [
        {
            "name": "Dastan Abylkhassov",
            "email": "abylhasov@gmail.com",
            "homepage": "https://nometa.xyz/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "dasbit\\apiclient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dasbit\\apiclient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
